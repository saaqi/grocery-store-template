{
	"name": "grocery-store-template",
	"private": true,
	"version": "2.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build --emptyOutDir && bun ./src/sitemap.ts",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"build-bootstrap": "sass --no-source-map ./src/styles/bs-dynamic.scss ./src/styles/bootstrap.css",
		"deploy": "git checkout main && git pull && git merge sveltekit && git push && git checkout sveltekit"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@fullhuman/postcss-purgecss": "^7.0.2",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/enhanced-img": "^0.6.1",
		"@sveltejs/kit": "^2.31.0",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@types/node": "^24.3.0",
		"autoprefixer": "^10.4.21",
		"cssnano": "^7.1.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"sass-embedded": "^1.90.0",
		"svelte": "^5.38.1",
		"svelte-check": "^4.3.1",
		"terser": "^5.43.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.1",
		"vite": "^6.3.5",
		"vite-plugin-devtools-json": "^0.2.1"
	},
	"dependencies": {
		"@fontsource-variable/inter": "^5.2.6",
		"@fontsource-variable/merriweather": "^5.2.4",
		"@types/bootstrap": "^5.2.10",
		"bootstrap": "^5.3.7",
		"boxicons": "^2.1.4"
	}
}
