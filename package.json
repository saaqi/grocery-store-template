{
	"name": "grocery-store-template",
	"private": true,
	"version": "2.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build --emptyOutDir && bun ./src/sitemap.ts",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"build-bootstrap": "sass --no-source-map ./src/styles/bs-dynamic.scss ./src/styles/bootstrap.css",
		"deploy": "git checkout main && git pull && git merge sveltekit && git push && git checkout sveltekit"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@fullhuman/postcss-purgecss": "^7.0.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.5",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/enhanced-img": "^0.9.3",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.0.9",
		"autoprefixer": "^10.4.23",
		"cssnano": "^7.1.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"sass-embedded": "^1.97.2",
		"svelte": "^5.46.4",
		"svelte-check": "^4.3.5",
		"terser": "^5.46.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"wrangler": "^4.59.2"
	},
	"dependencies": {
		"@fontsource-variable/inter": "5.2.8",
		"@fontsource-variable/merriweather": "5.2.6",
		"@types/bootstrap": "5.2.10",
		"baseline-browser-mapping": "^2.9.15",
		"bootstrap": "5.3.8",
		"boxicons": "2.1.4",
		"caniuse-lite": "^1.0.30001764"
	}
}
